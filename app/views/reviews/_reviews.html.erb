<h2>Reviews</h2>
<% if @reviews.exists? %>
  <% @reviews.each do |review| %>
    <div class='reviews-section shadow-sm p-3 mb-3 bg-body rounded'>
        <h6><strong><%= review.user.first_name %> <%= review.user.last_name %></strong></h6> 
        <p><%= review.created_at.strftime("%Y-%m-%d %H:%M") %></p> 
        <p><%= review.content %></p> 
        <% if can? :destroy, review %>
            <%= link_to 'Delete', [review.program, review], method: :delete, class: 'badge rounded-pill bg-danger', data: { confirm: "Are you sure you want to delete comment?"} %>
        <% end %>      
    </div>
  <% end %>
<% else %>
  <p>This Program Has Not Been Reviewed Yet</p>
<% end %>