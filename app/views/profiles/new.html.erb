<div class='row justify-content-center'>
    <div style="width: 500px;">
        <h1>User Body Profile</h1>
        <%= form_with model: @profile do |form| %>
            <%= form.label :age, "Age:" %><br>
            <%= form.date_field :age, class:"form-control" %><br>
            
            <%= form.label :height, "Height:" %><br>
            <%= form.number_field :height, class:"form-control" %><br>

            <%= form.label :weight, "Weight:" %><br>
            <%= form.number_field :weight, class:"form-control" %><br>

            <%= form.submit %>
        <% end %>
    </div>
</div>