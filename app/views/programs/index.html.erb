<h1>Index Page</h1>


<%= search_form_for @q do |f| %>
    <%= f.search_field :title_or_category_category_name_cont, placeholder: 'Search Programs' %>
    <%= f.submit %>
<% end %>




<br><br>
<h2>Not sure where to start? let us make you a suggestion</h2>
<%= link_to "Make me a Suggestion", suggestions_path, class:'btn btn-primary'%>
<br><br><br><br>

<div class='container'>
    <div class='row'>
        <% @programs.each do |program| %>
            <div class="card" style="width: 18rem;">
                <% if program.image.attached? %>
                    <%= image_tag program.image, class: 'card-img-top' %>
                <% else %>
                    <%= image_tag "blank-program.jpg", class: 'card-img-top' %>
                <% end %>
                <div class="card-body">
                    <h5 class="card-title"><%= program.title %></h5>
                    <p class="card-text"><%= program.description %></p>
                    <p class="card-text"><%= program.category.category_name %></p>
                    <%= link_to 'View Program', program_path(program.id), class: 'btn btn-primary' %>
                </div>
            </div>
        <% end %>
    </div>
</div>